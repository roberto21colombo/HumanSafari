<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.roberto.humansafari.activity.JoinGameActivity"
    android:background="@drawable/blackboard">

    <LinearLayout
        android:textColor="@android:color/white"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:gravity="center_horizontal">

        <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="cursive"
            android:text="Crea ad una Partita"
            android:textSize="40dp" />


        <TextView
            android:textColor="@android:color/white"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Nome partita"
            android:textSize="20dp" />
        <EditText
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:id="@+id/gameName"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Nome Partita"/>

        <TextView
            android:textColor="@android:color/white"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Codice Personaggi"
            android:textSize="20dp" />
        <EditText
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:id="@+id/codCharacter"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Codice Personaggi"/>
        <Button
            android:id="@+id/btnCreateGame"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
