<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8C9EFF"
    tools:context="com.example.roberto.humansafari.HomeActivity">

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:gravity="top"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">
            <TextView
                android:id="@+id/username"
                android:text="Username"
                android:layout_margin="20dp"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/score"
                android:text="Score: 0"
                android:layout_margin="20dp"
                android:textSize="30dp"/>

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/imageViewMap"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"
                android:src="@drawable/map_icon" />

            <ImageView
                android:id="@+id/imageViewRank"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/imageView"
                android:layout_weight="0.5"
                android:src="@drawable/classification_icon" />
        </TableRow>


        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="100dp">

            <ImageButton
                android:id="@+id/imgButtonFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:onClick="onClickSafari"
                android:scaleType="fitCenter"
                android:src="@drawable/find_icon"
                android:background="@drawable/find_icon"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/imageViewInstructions"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:src="@drawable/parchment_icon" />

            <ImageView
                android:id="@+id/imageViewAchievement"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:src="@drawable/achievement_icon" />
        </TableRow>


    </TableLayout>


</android.support.constraint.ConstraintLayout>
